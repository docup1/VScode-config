{
  // --- 1. ТЕМА И ГРАФИКА ---
  "workbench.colorTheme": "Bearded Theme Surprising Blueberry",
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.productIconTheme": "a-file-icon-vscode-product-icon-theme",
  "material-icon-theme.hidesExplorerArrows": true,
  "window.titleBarStyle": "native",
  "window.zoomLevel": 0.6,
"update.mode": "none",
  "workbench.tips.enabled": false,
  "workbench.statusBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  "breadcrumbs.enabled": false,
  "scm.diffDecorations": "none",
  "git.decorations.enabled": false,

  // --- 3. ПРОВОДНИК (SIDEBAR) ---
  "workbench.sideBar.location": "left",
  "workbench.tree.indent": 12,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.enableStickyScroll": true,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.decorations.badges": false,

  // --- 4. РЕДАКТОР (ЧИСТЫЙ ХОЛСТ) ---
  "editor.fontSize": 12,
  "editor.lineHeight": 1.8,
  "editor.fontFamily": "Hack Nerd Font, Fira Code, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.mouseWheelZoom": true,
  "editor.smoothScrolling": true,
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "explicit",

  // Отключение визуального шума
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.guides.indentation": false,
  "editor.matchBrackets": "never",
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.colorDecorators": false,
  "editor.codeLens": false,
  "editor.links": false,
  "editor.hover.enabled": "off",
  "editor.lightbulb.enabled": "off",
  "editor.parameterHints.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.showFoldingControls": "never",
  "editor.hideCursorInOverviewRuler": true,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",

  // --- 5. ТЕРМИНАЛ ---
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.tabs.showActions": "always",
  "terminal.integrated.gpuAcceleration": "off",

  // --- 6. ПОВЕДЕНИЕ И ФОРМАТИРОВАНИЕ ---
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "editor.tabCompletion": "on",
  "editor.acceptSuggestionOnEnter": "off",
  "emmet.triggerExpansionOnTab": true,
  "diffEditor.ignoreTrimWhitespace": true,

  // Поддержка инъекций кода в строки (требует расширение tobermory.es6-string-html)
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  "es6-string-html.languages": {
    "sql": ["sql", "SQL", "mysql", "postgresql", "pg", "query"],
    "css": ["css", "CSS", "style", "styled"],
    "html": ["html", "HTML", "xml"]
  },

  // --- 7. КАСТОМИЗАЦИЯ ЦВЕТОВ (CSS-IN-JSON) ---
  "workbench.colorCustomizations": {
    "editorCursor.background": "#000000",
    "editorOverviewRuler.border": "#00000000",
    "commandCenter.background": "#00000000",
    "commandCenter.border": "#00000000",
    "widget.shadow": "#00000000"
  },

  // Настройки для расширения Custom UI Style (если установлено)
  "custom-ui-style.stylesheet": {
    ".quick-input-widget": "top: 50% !important; left: 50% !important; transform: translate(-50%, -50%) !important; width: 600px !important; box-shadow: 0 0 100px rgba(0,0,0,0.8), 0 0 30px rgba(218, 112, 214, 0.2) !important; border-radius: 16px !important; border: 1px solid rgba(255, 255, 255, 0.1) !important; background-color: rgba(26, 21, 35, 0.95) !important; backdrop-filter: blur(20px);",
    ".quick-input-list .scrollbar": "display: none",
    ".quick-input-titlebar": "display: none !important",
    ".quick-input-header": "padding: 15px 20px !important;",
    ".command-center": "width: 300px !important; background: rgba(255, 255, 255, 0.05) !important;",
    ".command-center .command-center-center": "opacity: 1 !important;",
    ".monaco-editor .cursors-layer .cursor": "background-image: linear-gradient(180deg, #ffaffc 0%, #DA70D6 100%); transition: left 0.1s ease-out, top 0.1s ease-out !important;",
    ".monaco-editor .cursors-layer .cursor-primary": "transition: all 0.05s !important;",
    ".title-actions": "opacity: 0; transition: opacity 0.2s ease !important;",
    ".title-actions:hover": "opacity: 1 !important;",
    ".monaco-scrollable-element > .shadow.top": "display: none"
  },

  // --- 8. ЯЗЫКОВЫЕ СПЕЦИФИКАЦИИ ---
  "omnisharp.dotNetCliPaths": [
    "/opt/homebrew/bin/dotnet"
  ]
}
